procedure TAcceuil.quitter1Click(Sender: TObject);
begin
if MessageDlg('Voulez-vous quitter ?',mtConfirmation,[mbYes , mbNo],0)=mrYes then
  begin
    MessageDLG('Fèrmeture  de L application !',mtInformation,[ mbok ],0);
    close;
