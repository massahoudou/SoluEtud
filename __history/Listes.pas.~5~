{$R *.dfm}

procedure Tform_list.Button1Click(Sender: TObject);
begin
form_print.impression2.Preview  ;
panelEtudiant.Show
end;

procedure Tform_list.FormActivate(Sender: TObject);
begin
  panelEtudiant.Visible:= false;
